{
  "name": "Custom NGINX Home Assistant SSL proxy",
  "version": "1.0",
  "slug": "nginx_proxy",
  "description": "An SSL/TLS proxy",
  "url": "https://github.com/werapat00/hassio-addons",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "ports": {
    "80/tcp": null,
    "443/tcp": 1443
  },
  "map": ["ssl", "share"],
  "options": {
    "domain": null,
    "certfile": "10.0.20.1.chain.pem",
    "keyfile": "10.0.20.1.pem",
    "hsts": "max-age=31536000; includeSubDomains"
  },
  "schema": {
    "domain": "str",
    "certfile": "str",
    "keyfile": "str",
    "hsts": "str"
  },
  "image": "homeassistant/{arch}-addon-nginx_proxy"
}
